import torch
import torch.nn as nn
import torch.optim as optim
import numpy as np

# Define a tiny CNN (TinyNet)
class TinyNet(nn.Module):
    def __init__(self):
        super().__init__()
        self.conv1 = nn.Conv2d(1, 4, kernel_size=3, padding=1)
        self.pool = nn.MaxPool2d(2, 2)
        self.fc1 = nn.Linear(4 * 16 * 16, 2)

    def forward(self, x):
        x = self.pool(torch.relu(self.conv1(x)))
        x = x.view(x.size(0), -1)
        x = self.fc1(x)
        return x

# Create synthetic training data (solar vs non-solar)
def generate_data(n=100):
    X = []
    y = []
    for i in range(n):
        img = np.ones((32, 32), dtype=np.float32) * (0.8 if i % 2 == 0 else 0.2)
        if i % 2 == 1:
            img[8:24, 8:24] = 0.05  # fake "solar panel"
        X.append(img)
        y.append(i % 2)
    return np.array(X), np.array(y)

X, y = generate_data(200)
X_tensor = torch.tensor(X).unsqueeze(1)  # shape: (N,1,32,32)
y_tensor = torch.tensor(y)

# Initialize model, loss, optimizer
model = TinyNet()
criterion = nn.CrossEntropyLoss()
optimizer = optim.Adam(model.parameters(), lr=0.01)

# Train for a few epochs
for epoch in range(15):
    optimizer.zero_grad()
    outputs = model(X_tensor)
    loss = criterion(outputs, y_tensor)
    loss.backward()
    optimizer.step()

# Save trained model state
pt_path = "/mnt/data/tinynet_state.pt"
torch.save(model.state_dict(), pt_path)

pt_path

